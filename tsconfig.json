{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "commonjs",
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "lib",
    "dist",
    "docs",
    "node_modules",
    "example/webpack.config.js",
    "webpack.config.js",
    "_babel.config_.js",
    ".eslintrc.js",
    ".prettierrc.js"
  ]
}
